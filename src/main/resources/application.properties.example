spring.application.name=backend

# Server Port
server.port=8080

# Supabase(Postgres) Connection
# ⬇️ IMPORTANT: Get this full URL from your Supabase project's "Database" > "Connection string" > "Java"
spring.datasource.url=jdbc:postgresql://[YOUR_SUPABASE_HOST_AND_PORT]/postgres?user=[YOUR_SUPABASE_USER]&password=[YOUR_SUPABASE_PASSWORD]&sslmode=require&prepareThreshold=0&preparedStatementCacheQueries=0

# ⬇️ These might be redundant if the URL contains the user/password, but fill them just in case.
spring.datasource.username=[YOUR_SUPABASE_USER]
spring.datasource.password=[YOUR_SUPABASE_PASSWORD]
spring.datasource.hikari.data-source-properties.preferIPv4Stack=true


# JPA
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# JWT Secret
# ⬇️ IMPORTANT: Generate a new, strong, random secret key for your project
app.jwtSecret=[YOUR_OWN_JWT_SECRET_KEY]
app.jwtExpirationInMs=3600000

# Hikari (Supabase compatibility)
spring.datasource.hikari.cachePrepStmts=false
spring.datasource.hikari.prepStmtCacheSize=0
spring.datasource.hikari.prepStmtCacheSqlLimit=0


# Spring AI (Not currently used by ChatService, but here for reference)
# ⬇️ IMPORTANT: Add your Gemini API Key
spring.ai.google.gemini.api-key=[YOUR_GEMINI_API_KEY]
spring.ai.google.gemini.chat.model=gemini-2.5-flash

# Gemini API Configuration (Used by ChatService)
# ⬇️ IMPORTANT: Add your Gemini API Key
gemini.api.key=[YOUR_GEMINI_API_KEY]
gemini.api.url=https://generativelanguage.googleapis.com/v1/models/gemini-2.5-flash:generateContent

# Logging
logging.level.root=INFO
logging.level.com.example.backend=DEBUG